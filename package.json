{
  "name": "scrum-poker",
  "version": "1.0.0",
  "description": "A playful desktop app for Scrum Planning Poker estimation sessions",
  "main": "./out/main/index.js",
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/scrum-poker",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/scrum-poker.git"
  },
  "keywords": [
    "scrum",
    "poker",
    "planning",
    "estimation",
    "agile",
    "electron"
  ],
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "dev:web": "vite --config web/vite.config.js",
    "build:web": "vite build --config web/vite.config.js",
    "preview:web": "vite preview --config web/vite.config.js",
    "dev:ionic": "vite --config ionic/vite.config.js",
    "build:ionic": "vite build --config ionic/vite.config.js && npx cap sync",
    "preview:ionic": "vite preview --config ionic/vite.config.js",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:all": "npm run build && electron-builder --mac --win --config",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "npm run build && playwright test",
    "test:e2e:ui": "npm run build && playwright test --ui",
    "test:e2e:debug": "npm run build && playwright test --debug"
  },
  "devDependencies": {
    "@pinia/testing": "^1.0.3",
    "@playwright/test": "^1.56.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/ui": "^4.0.8",
    "@vue/test-utils": "^2.4.6",
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.1",
    "happy-dom": "^20.0.10",
    "playwright": "^1.56.1",
    "vite": "^7.2.2",
    "vite-plugin-pwa": "^1.1.0",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/ios": "^7.4.4",
    "axios": "^1.13.2",
    "canvas-confetti": "^1.9.4",
    "laravel-echo": "^2.2.6",
    "pinia": "^3.0.4",
    "pusher-js": "^8.4.0",
    "vue": "^3.5.24",
    "vue-router": "^4.6.3"
  },
  "build": {
    "appId": "com.scrumpoker.app",
    "productName": "Scrum Poker",
    "copyright": "Copyright Â© 2024",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "files": [
      "out/**/*",
      "!out/**/*.map"
    ],
    "extraFiles": [],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools",
      "icon": "resources/icon.icns",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "Scrum Poker ${version}",
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.ico",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Scrum Poker"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development",
      "icon": "resources/icons"
    }
  }
}
